post_install() {
	echo
	echo "Please make ~/.todo directory and copy the file /usr/share/todotxt/todo.cfg to ~/.todo/config"
	echo "and then edit the TODO_DIR path in that file to your desired todo data directory."
	echo
}

post_upgrade() {
	echo
	echo "The configuration file has recently moved to ~/.todo/config"
	echo "Try:"
	echo "mkdir -p ~/.todo/config mv ~/.todo.cfg ~/.todo/config"
	echo
}
